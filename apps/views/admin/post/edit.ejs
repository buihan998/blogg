<html>

<head>
    <title>Edit Post</title>

    <%- include ../layout/head %>

        <script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=9b36paxprs1fpjy6lvid2nzub0660svsfelf5k0jgr7760lu"></script>

        <script>
            tinymce.init({
                selector: '#mytextarea'
            });
        </script>


</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit Post
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <% if (data && data.error) {%>
                                <div style="" id="" class="alert alert-danger col-sm-12">
                                    <%= data.error%>
                                </div>
                                <%}%>
                                    <form role="form" method="" action="">

                                        <input class="id" type="hidden" name="id" value="<% if (data && data.post) {%><%= data.post.id%><%}%>">

                                        <div class="form-group">
                                            <label>Title</label>
                                            <input class="form-control title" name="title" placeholder="Title" value="<% if (data && data.post) {%><%= data.post.title%><%}%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Content</label>
                                            <textarea id="mytextarea" class="form-control" name="content" placeholder="Content" value="<% if (data && data.post) {%><%= data.post.content%><%}%>">   
                                    </textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Author</label>
                                            <input class="form-control author" name="author" placeholder="Author" value="<% if (data && data.post) {%><%= data.post.author%><%}%>">
                                        </div>

                                        <input type="button" value="Edit" name="" class="btn btn-success post_edit" />
                                    </form>
                        </div>
                    </div>

                </div>

            </div>

    </div>

    <script type="text/javascript" src="/static/js/post.js"></script>

</body>

</html>